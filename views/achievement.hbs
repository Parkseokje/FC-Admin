<div class="row home_section">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-body table-responsive">
        <table id="table_achievement" class="table no-margin table-bordered table-striped" width="100%">
          <thead>
            <tr>
              <th class="center">배정일</th>
              <th class="center">교육과정</th>
              <th class="center">교육기간</th>
            </tr>
          </thead>
          <tbody>
            {{#each list}}
            <tr>
              <td class="center">{{time created_dt}}</td>
              <td class="">
                {{#if (isEquals ../loggedIn.isdemo 1)}}
                <a href="#" class="btn-link">{{name}}</a>
                {{else}}
                <a href="/achievement/details?id={{id}}&edu_id={{edu_id}}" class="btn-link">{{name}}</a>
                {{/if}}
              </td>
              <td class="center">{{time start_dt}} ~ {{time end_dt}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>