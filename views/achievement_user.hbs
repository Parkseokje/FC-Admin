<div class="row home_section">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-body table-responsive">
        <table id="table_achievement_user" class="table no-margin table-bordered table-striped" width="100%">
          <thead>
            <tr>
              <th class="center">순위</th>
              <th class="center">점포</th>
              <th class="center">직책</th>
              <th class="center">이름</th>
              <th class="center">평균 포인트</th>
              <th class="center">평균 이수율</th>
            </tr>
          </thead>
          <tbody>
            {{#each list}}
            <tr>
              <td class="center">{{addOneForIndex @key}}</td>
              <td class="center">{{branch_name}}</td>
              <td class="center">{{duty_name}}</td>
              <td class="center">
                {{#if (isEquals ../loggedIn.isdemo 1)}}
                <a href="#" class="btn-link">{{user_name}}</a>
                {{else}}
                <a href="/achievement/user/details?user_id={{user_id}}" class="btn-link">{{user_name}}</a>
                {{/if}}
              </td>
              <td class="right">{{#if point}}{{point}}{{else}}-{{/if}}</td>
              <td class="right">{{#if (isEquals completed_rate 0) }}-{{else}}{{completed_rate}}{{/if}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>