<!-- Create Employee -->
<div class="modal fade" id="createDuty" role="dialog">
  <form class="modal-dialog" method="post" action="/employee/create/duty" id="frm_create_duty">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">직책등록</h4>
      </div>
      <div class="modal-body">
        <div class="form-group duty-input">
          <label>직책명</label>
          <input type="hidden" name="id" />
          <input type="text" class="form-control" name="name" id="name" placeholder="직책명" required autocomplete="off" />
        </div>

        <div class="form-group">
          <table id="table-dutyrs" class="table table-hover">
            <thead>
              <tr>
                <th>직책명</th>
              </tr>
            </thead>
            <tbody>
              {{#each duties}}
              <tr>
                <td class="duty-list">
                  <a data-id="{{id}}" data-name="{{name}}" href="#">{{name}}</a></li>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">닫기</button>
        <div class="pull-right duty-right-buttons">
          <button type="button" id="clear-input" class="btn btn-default">초기화</button>
          <button type="submit" class="btn btn-primary btn-submit">등록</button>
          <button type="button" id="btnDisableDuty" class="btn btn-danger" disabled>삭제</button>
        </div>
      </div>
    </div>
    <!-- /.modal-content -->
  </form>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->