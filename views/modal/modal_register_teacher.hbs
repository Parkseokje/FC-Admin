<!-- Create Employee -->
<div class="modal fade" id="createTeacher" role="dialog">
    <form class="modal-dialog" method="post" action="/course/create/teacher" id="frm_create_teacher">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">강사 등록/수정</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" name="id" />
                <div class="form-group">
                    <label>* 강사명</label>
                    <input type="text" class="form-control" name="teacher" placeholder="강사명" required autocomplete="off" />
                </div>

                <div class="form-group">
                    <label>강사 소개</label>
                    <textarea class="form-control" id="teacher_desc" name="teacher_desc" placeholder="강사소개를 입력하세요."></textarea>
                </div>

                <hr />

                <div class="form-group">
                    <h4>현재 강사 목록</h4>
                    <ul>
                        {{#each teacher_list}}
                        <li class="teacher-list"><a data-id="{{id}}" data-name="{{name}}" data-desc="{{desc}}" href="#">{{name}}</a></li>
                        {{/each}}
                    </ul>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">닫기</button>

                <div class="pull-right teacher-right-buttons">
                    <button type="button" id="clear-input" class="btn btn-default">초기화</button>
                    <button type="submit" class="btn btn-primary btn-submit">등록</button>
                    <button type="button" id="btnDisableTeacher" class="btn btn-danger" disabled>삭제</button>
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </form>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->